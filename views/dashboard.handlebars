{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
    {{#each posts as |post|}}
      {{> dashboardPosts}}
    {{/each}}

</section>
{{else}}
  <h2>You Have No Posts!</h2>
{{/if}}

<button type="submit" class="btn"><a class="link" href="/dashboard/new">Add New Post</a></button>

<script src="/js/newPost.js"></script>