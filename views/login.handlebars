<div class="row justify-content-center mt-3">
  <div class="card bg-secondary mb-3 p-3">
    <h2 class="card-title">Log In</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="username-login">Username:</label>
        <input class="form-input form-control" type="text" id="username-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input form-control" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-dark btn-block mt-4" type="submit">LOG IN</button>
      </div>
    </form>
  </div>
  <a href="/signup" class="sign-up">New User? Sign Up</a>
</div>

<script src="/js/login.js"></script>