{{!-- Update or Delete Existing Post --}}
<div class="card m-2">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body update-post-form">
        <div class="form-group">
            <label for="post-title" class="form-label">Title</label>
            <input name="post-title" type="text" value="{{posts.title}}" class="form-input form-control" id="post-title"/>
        </div>
        <div class="form-group">
            <label class="form-label" for="post-content">Content</label>
            <input name="post-content" type="text" value="{{posts.content}}" class="form-input form-control" id="post-content"/>
        </div>
        <div class="form-group row justify-content-center">
            <button type="submit" class="update-post-btn btn btn-dark m-2">Update Post</button>
            <button type="button" class="delete-post-btn btn btn-danger m-2">Delete Post</button>
        </div>
    </form>
</div>


<script src="/js/updatePost.js"></script>
<script src="/js/deletePost.js"></script>